<div class="well">
	<h2 class="title">User Settings:</h2>
	<div id="flash">
	</div>
	{{& csrftoken }}	
	<div class="row-fluid paragraph">
		<div class="span2">
			<h3>Contact</h3>
		</div>
		<div class="span10">
			<div class="control-group">
				<label for="username-input">Username</label>
				<div class="controls">
					<input id="username-input" class="input-xlarge" name="username" type="text" value="{{user.username}}">
				</div>
			</div>
			<div class="control-group">
				<label for="email-input">Email</label>
				<div class="controls">
					<input id="email-input" class="input-xlarge" name="email" type="text" value="{{user.email}}"></p>
				</div>
			</div>
		</div>
	</div>
	<div class="row-fluid paragraph">
		<div class="span2">
			<h3>Services connected</h3>
		</div>
		<div class="span10">
			{{# noServiceConnected}}
				<p>No services connected</p>
			{{/ noServiceConnected}}
			{{# is_dropbox_synced }}
				<p><i class="icon-large icon-dropbox"></i> Drobpox  <button class="btn btn-warning">Disconnect</button></p>
			{{/ is_dropbox_synced }}
			{{# is_evernote_synced }}
				<p><i class="icon-large icon-evernote"></i> Evernote <button class="btn btn-warning">Disconnect</button></p>
			{{/ is_evernote_synced }}
		</div>
	</div>
	<div class="row-fluid paragraph">
		<div class="span2">
			<h3>Change password</h3>
		</div>
		<div class="span10">
			<div class="control-group password">
				<label for="current-pass">Type your password:</label>
				<div class="controls">
					<input id="current-pass" class="input-xlarge" name="current-pass" type="password">
				</div>
			</div>			
			<h4>New password</h4>
			<div class="control-group password">
				<label for="new-pass">Choose a new password:</label>
				<div class="controls">
					<input id="new-pass" class="input-xlarge" name="new-pass" type="password">
				</div>
			</div>
			<div class="control-group password">
				<label for="new-repeat-pass">Retype the new password:</label>
				<div class="controls">
					<input id="new-repeat-pass" class="input-xlarge" name="new-repeat-pass" type="password">
				</div>
			</div>
		</div>
	</div>
	<div class="row-fluid">
		<button class="btn btn-inverse offset2 change-settings">Change</button>
	</div>			
</div>