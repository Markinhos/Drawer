<div class="accordion-group task-group {{ opacity }}">
	<div class="task-item accordion-toggle" data-toggle="collapse" data-target="#data-{{ id }}">
		<div class="accordion-heading">	
			<div class="task-check">
				<input class="task-status" type="checkbox" {{ doneStatus }}>
			</div>
			<div class="task-meta">
		    </div>
			<div class="task-content">
				<a href="#">{{ title }}</a>
			</div>
		</div>
	</div>
	<div id="data-{{ id }}" class="accordion-body collapse {{ accordionOpen}}">
		<div class="accordion-inner">
			<div class="row-fluid">
				<div class="span1">	
					<div>Due date:</div>					
				</div>
				<div class="span5">
					<div class="input-append date bootstrap-datepicker span3" data-date="{{duedateDate}}">
						<input class="dateinput task-date" style="width: 80px; float:left; position: relative;" size="16" type="text" value="{{duedateDate}}">
						<span class="add-on"><i class="icon-calendar"></i></span>
					</div>
					<div class="input-append bootstrap-timepicker-component span2" >
						<input class="timepicker-default input-small task-time" style="width: 50px; float:left; position: relative;" type="text" value="{{ duedateTime }}">
						<span class="add-on"><i class="icon-time" ></i></span>
					</div>
				</div>
				<div class="span1">
					<p>Creator:</p>
				</div>
				<div class="span2">
					<p>{{creator_name}}</p>
				</div>
			</div>
			<div class="row-fluid">
				<div class="span1">
					Description:
				</div>
				<div class="span5">
					<span style="padding:1px;">{{& descriptionHtml }}</span>
				</div>
				<div class="span1">
					Location:
				</div>
				<div class="span5">
					<div style="padding:1px;">{{& locationHtml }}</div>
				</div>
			</div>
			<div class="row-fluid">
				<div class="span6">
					<button class="btn btn-inverse edit-task">Save</button>
				</div>
				<div class="span6">
					<button class="btn btn-link delete-task"><i class="icon-trash"></i> Delete Task</button>
				</div>
			</div>			
		</div>
	</div>
</div>